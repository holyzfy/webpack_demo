{
  "name": "webpack_demo",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "validate_filename": "node validate_filename.js `git diff --staged --name-only --diff-filter=ACMRTU`",
    "sasslint": "files=`git diff --staged --name-only --diff-filter=ACMRTU | grep -ie '\\.s[ac]ss$'`; if [ \"${files:=empty}\" != \"empty\" ]; then sass-lint --verbose --no-exit $files; fi",
    "eslint": "files=`git diff --staged --name-only --diff-filter=ACMRTU | grep -ie '\\.js$'`; if [ \"${files:=empty}\" != \"empty\" ]; then eslint -c .eslintrc.json $files; fi",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate_filename && npm run sasslint && npm run eslint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holyzfy/webpack_demo.git"
  },
  "bugs": {
    "url": "https://github.com/holyzfy/webpack_demo/issues"
  },
  "homepage": "https://github.com/holyzfy/webpack_demo#readme",
  "keywords": [
    "webpack",
    "demo",
    "example"
  ],
  "author": "holyzfy <zhaofuyun202@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "clean-webpack-plugin": "^0.1.9",
    "css-loader": "^0.23.1",
    "extract-loader": "0.0.2",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "node-sass": "^3.7.0",
    "postcss-loader": "^0.9.1",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7"
  },
  "devDependencies": {
    "ghooks": "^1.2.1"
  }
}
